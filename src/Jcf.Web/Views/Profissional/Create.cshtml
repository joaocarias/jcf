@model Jcf.Web.Models.Profissional.ProfissionalViewModel
@using Jcf.Dominio.Uteis

<div class="card">
    <div class="card-body">
        <h3 class="card-title">@ConstantesStrings.TITULO_PROFISSIONAIS</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Profissional">@ConstantesStrings.TITULO_PROFISSIONAIS</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ConstantesStrings.TITULO_PAGINA_NOVO_CADASTRO</li>
            </ol>
        </nav>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">
        @ConstantesStrings.TITULO_PAGINA_NOVO_CADASTRO
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-6 mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" type="text" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-3 mb-3">
                    <label asp-for="Cpf" class="form-label"></label>
                    <input asp-for="Cpf" class="form-control mask_cpf" type="text" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class="col-3 mb-3">
                    <label asp-for="DataNascimento" class="form-label"></label>
                    <input asp-for="DataNascimento" class="form-control mask-data" type="text" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-5 mb-3">
                    <label asp-for="FuncaoId" class="form-label"></label>
                    <select asp-for="FuncaoId" class="form-control" asp-items="@ViewBag.Funcoes" >
                        <option disabled>-- Selecione --</option>
                    </select>
                    <span asp-validation-for="FuncaoId" class="text-danger"></span>
                </div>

                <div class="col-3 mb-3">
                    <label asp-for="Telefone" class="form-label"></label>
                    <input asp-for="Telefone" class="form-control mask_telefone" type="text" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="col-4 mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="col-6 mb-3">
                    <label asp-for="Endereco.Logradouro" class="form-label"></label>
                    <input asp-for="Endereco.Logradouro" class="form-control" type="text" />
                    <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
                </div>
                <div class="col-2 mb-3">
                    <label asp-for="Endereco.Numero" class="form-label"></label>
                    <input asp-for="Endereco.Numero" class="form-control" type="text" />
                    <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                </div>
                <div class="col-4 mb-3">
                    <label asp-for="Endereco.Complemento" class="form-label"></label>
                    <input asp-for="Endereco.Complemento" class="form-control" type="text" />
                    <span asp-validation-for="Endereco.Complemento" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-6 mb-3">
                    <label asp-for="Endereco.Bairro" class="form-label"></label>
                    <input asp-for="Endereco.Bairro" class="form-control" type="text" />
                    <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                </div>
                <div class="col-2 mb-3">
                    <label asp-for="Endereco.Cep" class="form-label"></label>
                    <input asp-for="Endereco.Cep" class="form-control mask-cep" type="text" />
                    <span asp-validation-for="Endereco.Cep" class="text-danger"></span>
                </div>

            </div>

            <div class="row">

                <div class="col-5 mb-3">
                    <label asp-for="Endereco.Cidade" class="form-label"></label>
                    <input asp-for="Endereco.Cidade" class="form-control" type="text" />
                    <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
                </div>
                <div class="col-3 mb-3">
                    <label asp-for="Endereco.Uf" class="form-label"></label>
                    <select asp-for="Endereco.Uf" asp-items="@ViewBag.Estados" class="form-control" ></select>
                    <span asp-validation-for="Endereco.Uf" class="text-danger"></span>
                </div>

                <div class="col-4 mb-3">
                    <label asp-for="Endereco.Obs" class="form-label"></label>
                    <input asp-for="Endereco.Obs" class="form-control" type="text" />
                    <span asp-validation-for="Endereco.Obs" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <hr />
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-sm btn-primary"> <i class="fas fa-save"></i> Salvar </button>
                <a asp-action="Index" asp-controller="Profissional" class="btn btn-sm btn-warning"> <i class="fas fa-ban"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>